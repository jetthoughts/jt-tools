#!/usr/bin/env bash

set -eo pipefail

yamllint --config-file lib/install/.yamllint.yml --strict .*/*.yml
yamllint --config-file lib/install/.yamllint.yml --strict ./*.yml
yamllint --config-file lib/install/.yamllint.yml --strict lib/**/.*.yml
yamllint --config-file lib/install/.yamllint.yml --strict ./**/.*/*.yml

bundle exec rubocop -P
