#!/usr/bin/env bash

set -eo pipefail

mkdir -p tmp/

cd tmp
rm -rf test_tmpl

rails new test_tmpl -m ../template.rb

cd test_tmpl

echo "Verify installation scripts:"
bin/tools-setup
bin/tools-upgrade

echo "Verify linters setup:"

git add .
git commit -m 'Initial Commit'

echo "class Test;end" > test.rb

git add .
git commit -m 'Verification class'

bin/rubocop --fail-level F test.rb
bin/pronto run -c HEAD~1 --no-exit-code

echo "Verify CircleCI config:"
hash circleci 2>/dev/null || curl -fLSs https://circle.ci/cli | bash
circleci version
circleci config validate
